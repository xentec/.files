#!/bin/env bash
#
# awesome-notify <title> <message> <timeout> <bgcolor> <fgcolor>
#

read -r -d '' CALL <<EOF
local n = require('naughty');
        n.notify({
                preset = n.config.presets.warning,
                title = "$1",
                text = "$2",
                timeout = ${3:-1},
                bg = '$4',
                fg = '$5',
        });
EOF
#echo -e "$CALL"
echo $CALL | tr -d '\n' | awesome-client

